#include "common.h"

String text = "";

void showWeather()
{
    mx.clear();
    if (b1.isDown())
    {
        mx.px(0, 0, mx.hsv(0, 255, 255));
    }
    if (b2.isDown())
    {
        mx.px(1, 0, mx.hsv(140, 255, 255));
    }
    if (b3.isDown())
    {
        mx.px(2, 0, mx.hsv(140, 255, 255));
    }
    if (b4.isDown())
    {
        mx.px(3, 0, mx.hsv(140, 255, 255));
    }

    if (b1.isPressedFor(10000))
    {
        text = "10s";
        mx.resetScroll();
    }
    else if (b1.isPressedFor(5000))
    {
        text = "5s";
        mx.resetScroll();
    }
    else if (b1.isPressedFor(2000))
    {
        text = "2s";
        mx.resetScroll();
    }
    else if (b1.isClicked())
    {
        text = "Jegor";
        mx.setTextColor(0, 0, 255);
        mx.resetScroll();
    }
    if (b2.isClicked())
    {
        text = "Stepa";
        mx.setTextColor(140, 255, 255);
        mx.resetScroll();
    }
    if (b3.isClicked())
    {
        text = "Esenia";
        mx.setTextColor(230, 255, 255);
        mx.resetScroll();
    }
    if (b4.isClicked())
    {
        text = "Alesja";
        mx.setTextColor(200, 255, 255);
        mx.resetScroll();
    }

    mx.scrollText(text, 5, 100);
}
